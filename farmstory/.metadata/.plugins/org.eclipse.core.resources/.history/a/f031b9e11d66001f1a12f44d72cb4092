package com.farmstroy.DAO.cart;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import com.farmstroy.DAO.member.MemberDAO;
import com.farmstroy.DTO.cart.CartDTO;
import com.farmstroy.util.DBHelper;
import com.farmstroy.util.SQL;

public class CartDAO extends DBHelper{
	private static CartDAO instance = new CartDAO();
	public static CartDAO getInstance() {
		return instance;
	}
	private CartDAO() {};
	
	private Logger logger = LoggerFactory.getLogger(this.getClass());
	public int selectCart(String uid) {
		int cart_idx = 0;
		try {
			conn = getConnection();
			psmt = conn.prepareStatement(SQL.SELECT_CART_BY_UID);
			psmt.setString(1, uid);
			rs = psmt.executeQuery();
			
			while(rs.next()) {
				cart_idx = rs.getInt("cart_idx");
			}
		} catch (Exception e) {
			// 
		}
		return cart_idx;
	}
	public void insertCart(CartDTO cart) {
		CartDTO dto = new CartDTO();
		try {
			conn = getConnection();
			psmt = conn.prepareStatement(SQL.INSERT_INTO_CART);
			psmt.setInt(1, dto.getCart_idx());
			psmt.setString(2, dto.getUid());
			psmt.setString(3, dto.getPath());
			psmt.setString(4, dto.getFileName());
			psmt.setString(5, dto.getType());
			psmt.setString(6, dto.getProd_name());
			psmt.setInt(7, dto.getQuantity());
			psmt.setInt(8, dto.getDiscount());
			psmt.setBigDecimal(9, dto.getPoint());
			psmt.setBigDecimal(10, dto.getPrice());
			psmt.setBigDecimal(11, dto.getSum());
			psmt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		return null;
	}
}
